{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./lib/",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "allowJs": true,
    "lib": ["dom", "es2015", "es2015.promise"],
    "typeRoots": ["./node_modules/@types"],
    "types": ["jest", "jest-extended"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "lib/**/*.ts", "lib/**/*.js", "src/**/*.spec.ts"]
}
